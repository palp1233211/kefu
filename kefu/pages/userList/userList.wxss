/* pages/userList/userList.wxss */
.page-section-spacing{
  margin-top: 60rpx;
}
.scroll-view_H{
  white-space: nowrap;
}
/* .scroll-view-item{
  height: 300rpx;
} */
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  width: 88rpx;
  height: 88rpx;
  margin: 20rpx;
  border-radius: 50%;
}
#user-img{
  display: inline-block;
  vertical-align: middle;
}
#user-name{
  display: inline-block;
  margin: 20rpx;
  vertical-align: middle;
  font-size: 40rpx;
}
#chat-list-people:hover{
  box-sizing: border-box;
  background-color: #f8f8f8;
}


#chatBox-kuang{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  
}
#chatBox-head{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  /* height: 140rpx; */
  padding: 20rpx 0;
  background-color: #01aee0;
  border-radius: 20rpx 20rpx 0 0;
}
#chatBox-head button{
  width: auto;
  display: inline-block;
  padding: 30rpx;
  height: 110rpx;
  margin-left: 20rpx;
  text-align: center;
  /* border-radius: 10px; */
  background-color: rgba(0,0,0,0);
  color: #fff;
  vertical-align: middle;
}
#chatBox-head button:hover{
  background-color:#0188b7;
}
#ChatInfoName{
  margin-left: 20rpx;
  display: inline-block;
  vertical-align: middle;
  color: #fff;
}

#chatBox-info{
  width: 100%;
  height: 80%;
  background: #fff;
  text-align: left;
  position: absolute;
  top: 140rpx;
  left: 0;
}
#chatBox-send {
  width: 100%;
  padding: 20rpx 10rpx;
  background: #eee;
  border-top: 1px #D0D0D0 solid;
  position: absolute;
  bottom: 0;
  left: 0;
}

#div-textarea{
  width: 500rpx;
  min-height: 60rpx;
  max-height: 200rpx;
  _height: 220rpx;
  padding: 3rpx;
  outline: 0;
  background: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  word-wrap: break-word;
  overflow-x: hidden;
  overflow-y: auto;
  display: inline-block;
  vertical-align: middle;  
}
#chat{
  display: inline-block;
  vertical-align: middle;
}

#chat-tuxiang,#chat button{
  padding: 5rpx 10rpx;
  margin-left: 12rpx;
}
.btn-default-styles{
  outline: none;
  resize: none;
  border: none;
  display: inline-block;
  padding: 5px 10px;
  margin-bottom: 0;
  font-size: 35rpx;
  font-weight: 400;
  line-height: 1.42857143;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  background-image: none;
  background: #bbb;
  color: #fff;
  border-radius: 14rpx;
  vertical-align: middle;
}
.hidden {
  display: none;
}
#chat-fasong{
  padding: 0;
  width: auto;
}
#div-textarea:focus {
  box-shadow: 0 0 15px rgba(82, 168, 236, 0.6);
}


/* 用户聊天的css */
.clearfloat {
  zoom: 1;
  margin: 10px 10px;
}
.clearfloat:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}
.author-name {
  text-align: center;
  margin: 30rpx 0 10rpx 0;
  color: #888;
}
.clearfloat .right {
  float: right;
}


.clearfloat .right .chat-message {
  background: #8c85e6;
  color: #fff;
  text-align: left;
  min-height: 48rpx;
}

.clearfloat .chat-message {
  max-width: 405rpx;
  padding: 15rpx 24rpx;
  border-radius: 12rpx;
  word-wrap: break-word;
  display: inline-block;
  position: relative;
}
.clearfloat .right .chat-message:before {
  position: absolute;
  content: "";
  top: 16rpx;
  right: -12rpx;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-left: 20rpx solid #8c85e6;
}


.clearfloat .right .chat-avatars {
  margin-left: 20rpx;
}

.clearfloat .chat-avatars>image {
  width: 80rpx;
  height: 80rpx;
}
.clearfloat .chat-avatars {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
  vertical-align: top;
  overflow: hidden;
}
.clearfloat .left .chat-message {
  background: #D9D9D9;
  min-height: 72rpx;
}
.clearfloat .left .chat-avatars {
  margin-right: 20rpx;
}
.clearfloat .left .chat-message:before {
  position: absolute;
  content: "";
  top: 16rpx;
  left: -12rpx;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-right: 20rpx solid #D9D9D9;
}



